@using Great_Album;
@using Users.DAL;
@using Entities;
@{
    string errorMessage = null;
    UserMemoryStorage myStorage = new UserMemoryStorage();

    if (IsPost)
    {
        string login = Request["login"];
        string pass = Request["pass"];
        if (Auth.CanLogin(login, pass))
        {
            FormsAuthentication.SetAuthCookie(login, true);
            login = "";
            pass = "";
            Response.Redirect("~/Pages/HomePage.cshtml");
            return;
        }
        else
        {
            errorMessage = "Invalid login or password";
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        * {
            font-family: 'Calibri';
        }

        body {
            background-color: #eeeff1;
        }

        .Auth {
            width: 300px;
            height: auto;
            position: relative;
            top: 300px;
            margin-left: 50%;
            left: -150px;
            border: 1px solid #D0D0D0;
            border-radius: 2px;
            background-color: white;
        }
        h1 {
            font-size: 20px;
            position: relative;
            left: 85px;
        }
        .Reg{
            border: none;
            background-color: white;
        }
    </style>
</head>
<body>
    @if (errorMessage != null)
    {
        <div class="Error">@errorMessage</div>
    }
    <div class="Auth">
        <form action="~/Pages/Authorization.cshtml" method="post">
            <h1>Authorization</h1>
            <table>
                <tr>
                    <td><label for="login">Login:</label></td>
                    <td><input type="text" name="login" value="" /></td>
                </tr>
                <tr>
                    <td><label for="pass">Password:</label></td>
                    <td><input type="password" name="pass" value="" /></td>
                </tr>
                <tr><td><button class="signIn"> Sign In </button></td></tr>
            </table>
        </form>
        <form action="~/Pages/Registration.cshtml" method="post">
            <button class="Reg"> Registration </button>
        </form>
    </div>
    
</body>
</html>
